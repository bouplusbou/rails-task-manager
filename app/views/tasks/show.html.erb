<h1> <%= @task[:title] %> </h1>
<%= link_to "Edit this task", edit_path %>
<p class="details"> <%= @task[:details] %> </p>
<% if @task[:completed] == true %>
  <p><i class="fas fa-check-square"></i> This task is completed</p>
<% else %>
  <p><i class="far fa-square"></i> This task is not completed</p>
<% end %>
<%= link_to "Go Back to list", tasks_path %>
